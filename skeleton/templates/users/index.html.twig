{% extends 'base.html.twig' %}

{% block title %}Hello Admin !{% endblock %}

{% block body %}
<div class="row">
    <div class="col-sm-12 table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Avatar/Photo.profil</th>
                    <th scope="col">Nom/pseudo</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Age</th>
                    <th scope="col">Styles</th>
                    <th scope="col">influences(artistes,groupes)</th>
                </tr>
            </thead>
        <tbody>

        {% for user in users %}
            <tr class="table-light">
                <td><img class="img_avatar" src="../img/avatar_directory/{{ user.avatar }}" alt="image de profil de l'utilisateur"></td>
                <td><a href="{{ path('edit_urprofile', {'id' : user.id})  }}">{{ user.username }}</a></td>
                <td>{{ user.city }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.styles }}</td>
                <td>{{ user.influences }}</td>
                {% endfor %}
            </tr>
        </tbody>

    </table>
    </div>
</div>

    <div class="pagination-sm d-flex justify-content-center">
        {{ knp_pagination_render(users) }}
    </div>
{% endblock %}