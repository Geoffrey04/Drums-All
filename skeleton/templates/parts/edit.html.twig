{% extends 'base.html.twig' %}

{% block title %}Edition de partition{% endblock %}

{% block body %}
{% if app.user.id == part.author.id %}
<div class="formView" style="word-wrap: break-word">
    <h1>Editer :</h1>
        <h2 style="text-align: center">{{ part.title }}</h2>
            <p>Les champs marqués d'un (*) sont obligatoires</p>
    {% if app.user %}
        {{ form_start(form) }}
        {{ form_row(form.title)}}
        {{ form_row(form.Groupe) }}
        {{ form_row(form.styles)}}
        {{ form_row(form.type) }}
        {{ form_row(form.pictures) }}
                <button type="submit" class="btn btn-primary">Envoyez</button>
        {{ form_end(form) }}
                <div class="btnDeletePartsEdit">{{ include('parts/_delete_form.html.twig') }}</div>
    {% endif %}
                    <a href="{{ path('parts_index') }}" class="linkCustom">back to list</a>
    {% else %}
    <p>Vous n'êtes pas autorisé à accéder à cette page</p>
    {% endif %}
</div>
{% endblock %}
