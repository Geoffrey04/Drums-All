{% extends 'base.html.twig' %}

{% block title %}Ajouter un morceau{% endblock %}

{% block body %}
    <h1>Enregistrer un nouveau morceau</h1>
    {% if app.user %}
        <div class="row">
            <div class="formView col-sm-9">
                <p>Les champs avec * sont obligatoires</p>
                {{ form_start(form) }}
                    {{ form_row(form.title)}}
                    {{ form_row(form.Groupe) }}
                    {{ form_row(form.styles)}}
                    {{ form_row(form.type)}}
                    {{ form_row(form.pictures)}}
                        <button type="submit" class="btn btn-secondary">Envoyez</button>
                {{ form_end(form) }}
                    <div>
                        <a href="{{ path('parts_index') }}" class="linkCustom">Accueil</a>
                    </div>
            </div>
    </div>
{% endif %}
{% endblock %}