{% extends 'base.html.twig' %}

{% block title %} Search {% endblock %}

{% block body %}
    <h1 id="test_title">Chercher un morceau</h1>

    <div class="formResearch">
        {{ form_start(form_T) }}
        {{ form_row(form_T.title) }}
        {{ form_row(form_G.groupe) }}
        {{ form_row(form_A.author) }}
        {{ form_row(form_S.styles) }}
        {{ form_row(form_Type.type) }}
        <button class="btn btn-secondary">Chercher</button>
    </div>

    <table class="table">
        <tbody>
        {% for part in parts %}
        <tr>
            <th>Id</th>
            <td>{{ part.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ part.title }}</td>
        </tr>
        <tr>
             <th>Artiste/Groupe</th>
             <td>{{ part.groupe }}</td>
        </tr>
         <tr>
            <th>Auteur</th>
            <td>{{ part.author }}</td>
         </tr>
        <tr>
            <th>Style</th>
            <td>{{ part.styles }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ part.type }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><a href="/img/sheetmusic_directory/{{ part.pictures }}" data-lightbox="img_search"><img src="/img/sheetmusic_directory/{{ part.pictures }}"></a></td>
            <td><a href="/img/sheetmusic_directory/{{ part.pictures }}" download="{{ part.title }}-{{ part.groupe }}_by{{ part.author }}">Telecharger</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>


<script>
</script>
{% endblock %}